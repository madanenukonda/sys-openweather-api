<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="call-to-openweather-api-test-suite.xml" />
	<munit:test name="call-to-openweather-api-test-suite-call-to-openweather-api-sub_flowTest" doc:id="6fab1e67-6f73-4f0e-a4c9-bb46bb182c17" description="Test">
		<munit:behavior >
			<munit-tools:mock-when doc:name="mock-https-openweathermap-system" doc:id="53fcaca2-0625-43ac-ad34-aba121abecae" processor="http:request">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="HTTP_openweathermap-org" attributeName="config-ref" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[readUrl('classpath://sys-openweathermap-success-response.json')]" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="set-queryParams" doc:id="3d9207d1-4301-44e0-90eb-f775607770b3" >
				<munit:attributes value="#[{method : 'GET', queryParams : {zipcode : '94536'}}]" />
			</munit:set-event>
			<flow-ref doc:name="Flow-ref to call-to-openweather-api-sub_flow" doc:id="39118b92-9f6e-4b65-8369-50f16253e4e2" name="call-to-openweather-api-sub_flow"/>
		</munit:execution>
		<munit:validation>
			<munit-tools:assert-equals doc:name="assert-country" doc:id="9b92676f-a359-4b53-919a-69bb373bfeab" actual="#[payload.country]" expected='#["US"]'/>
		</munit:validation>
	</munit:test>


</mule>
